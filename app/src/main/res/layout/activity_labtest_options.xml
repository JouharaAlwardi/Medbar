<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/viewResults"
        android:layout_width="261dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:background="@color/common_google_signin_btn_text_light_pressed"
        android:text="View Results"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/make" />

    <Button
        android:id="@+id/uploadResults"
        android:layout_width="261dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:background="@color/common_google_signin_btn_text_light_pressed"
        android:text="Upload Results"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/viewResults"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/make" />

    <Button
        android:id="@+id/bookLT"
        android:layout_width="261dp"
        android:layout_height="52dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:background="@color/common_google_signin_btn_text_light_pressed"
        android:text="Book Labtests"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/uploadResults"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993" />

</androidx.constraintlayout.widget.ConstraintLayout>